{#
    HyperComments - The HyperComments system makes for meaningful context
    remarks, nested and topicated respectively to facilitate further
    discussions.

    @see https://www.hypercomments.com/
 #}
<div id="jscomments">
    <div id="hypercomments_widget"></div>

    <script type="text/javascript">
        _hcwp = window._hcwp || [];
        _hcwp.push({
            widget: "Stream",
            widget_id: "{{ widget_id|e('js') }}",
            social: "{{ social|join(',')|e('js') }}"
        });
        (function () {
            if ("HC_LOAD_INIT" in window) {
                return
            }
            window.HC_LOAD_INIT = true;
            var lang = (navigator.language || navigator.systemLanguage || navigator.userLanguage || "en").substr(0, 2).toLowerCase();
            var hcc = document.createElement("script");
            hcc.type = "text/javascript";
            hcc.async = true;
            hcc.src = ("https:" == document.location.protocol ? "https" : "http") + "://w.hypercomments.com/widget/hc/90285/" + lang + "/widget.js";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hcc, s.nextSibling);
        })();
    </script>
    {{ 'PLUGINS.JS_COMMENTS.PROVIDERS.HYPERCOMMENTS.COPYRIGHT'|t|raw }}
</div>
